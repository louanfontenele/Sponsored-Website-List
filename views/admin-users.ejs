<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>User Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-white text-black">
    <nav class="p-4 border-b">
      <a href="/admin" class="mr-4">Back to Admin Panel</a>
      <a href="/" class="mr-4">Home</a>
    </nav>
    <div class="container mx-auto p-4">
      <h1 class="text-2xl font-bold mb-4">User Management</h1>

      <!-- Lista de usuários -->
      <table class="table w-full mb-4">
        <thead>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td>
              <!-- Formulário para alterar a senha do usuário -->
              <form
                action="/admin/users/edit/<%= user.id %>"
                method="POST"
                class="inline-block">
                <input
                  type="password"
                  name="newPassword"
                  placeholder="New Password"
                  class="border p-1 text-sm"
                  required />
                <button
                  type="submit"
                  class="bg-blue-500 text-white px-2 py-1 text-sm">
                  Change Password
                </button>
              </form>
              <!-- Botão para excluir usuário; a exclusão do 'admin' é bloqueada no backend -->
              <form
                action="/admin/users/delete/<%= user.id %>"
                method="POST"
                class="inline-block ml-2">
                <button
                  type="submit"
                  class="bg-red-500 text-white px-2 py-1 text-sm">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <!-- Formulário para criar novo usuário -->
      <h2 class="text-xl mb-2">Create New User</h2>
      <form
        action="/admin/users/add"
        method="POST"
        class="bg-gray-100 p-4 rounded">
        <div class="mb-2">
          <label>Username:</label>
          <input
            type="text"
            name="username"
            class="border p-2 w-full"
            required />
        </div>
        <div class="mb-2">
          <label>Password:</label>
          <input
            type="password"
            name="password"
            class="border p-2 w-full"
            required />
        </div>
        <button type="submit" class="bg-green-500 text-white px-4 py-2">
          Add User
        </button>
      </form>
    </div>
  </body>
</html>
